generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  FOUNDER
  PRODUCER
  AMBASSADOR
  SERVICE_PROVIDER
  CLIENT
}

enum TransactionType {
  CREDIT
  DEBIT
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  producedEvents Event[] @relation("ProducedEvents")
  tickets        Ticket[] @relation("UserTickets")
  ambassadorPasses Ticket[] @relation("AmbassadorTickets")
  wallet        Wallet?
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  producerId  String
  startDate   DateTime
  endDate     DateTime
  location    String
  basePrice   Decimal   @db.Decimal(18, 4)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  producer User   @relation("ProducedEvents", fields: [producerId], references: [id])
  tickets  Ticket[]
}

model Ticket {
  id            String   @id @default(cuid())
  eventId       String
  buyerId       String
  price         Decimal  @db.Decimal(18, 4)
  ambassadorId  String?
  createdAt     DateTime @default(now())

  event       Event @relation(fields: [eventId], references: [id])
  buyer       User  @relation("UserTickets", fields: [buyerId], references: [id])
  ambassador  User? @relation("AmbassadorTickets", fields: [ambassadorId], references: [id])
}

model Wallet {
  id         String   @id @default(cuid())
  userId     String   @unique
  balanceNEV Decimal  @db.Decimal(18, 4) @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user         User        @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id        String          @id @default(cuid())
  walletId  String
  type      TransactionType
  amount    Decimal         @db.Decimal(18, 4)
  reason    String?
  createdAt DateTime        @default(now())

  wallet Wallet @relation(fields: [walletId], references: [id])
}
